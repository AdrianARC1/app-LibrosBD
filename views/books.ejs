<%- include('partials/header.ejs') %> 

  <body>
    <div class="flex flex-wrap w-full justify-around bg-purple-300">
    <% result_libros.forEach(function (libro) { %> 
        <div class="w-[33%] 
        h-[89vh] border-solid border-2 border-black mt-[1vh] flex flex-col items-center justify-evenly rounded-xl">
          <p><strong>Titulo:</strong>: <%= libro.title %> </p>
          <p><strong>Autor:</strong> <%= libro.autor %> </p>
          <img src="<%= libro.imagen %>" class="h-96 w-80"></img>
          <p class="w-80 text-justify"><strong>Descripcion: </strong><%= libro.descrip %> </p>
          <button onclick="alerta(<%=libro.id %>)" class="p-2 bg-red-800 rounded-xl px-5">Eliminar</button> 
        
        </div>
    <% }) %>
    </div>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>  
  
    <script>
      function alerta(elim){
        console.log(elim)
        Swal.fire({
          title: 'Are you sure?',
          text: "You won't be able to revert this!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
          if (result.isConfirmed) {
            Swal.fire(
              'Deleted!',
              'Your file has been deleted.',
              'success'
              
            )
            window.location= '/delete/'+elim
          }
        })
      }
    </script>
  </body>
</html>
