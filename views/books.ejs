<%- include('partials/header.ejs') %> 

  <body>
    <div class="flex flex-wrap w-full justify-around bg-purple-300">
    <% result_libros.forEach(function (libro) { %> 
        <div class="w-[33%] 
        h-[89vh] border-solid border-2 border-black mt-[1vh] flex flex-col items-center justify-evenly rounded-xl">
          <p><strong>Titulo:</strong>: <%= libro.title %> </p>
          <p><strong>Autor:</strong> <%= libro.autor %> </p>
          <img src="<%= libro.imagen %>" class="h-96 w-80"></img>
          <p class="w-80 text-justify"><strong>Descripcion: </strong><%= libro.descrip %> </p>
          <a href="/delete/<%= libro.id %>" class="p-2 bg-red-800 rounded-xl px-5">Eliminar</a>
        
        </div>
    <% }) %>
    </div>


  </body>
</html>
